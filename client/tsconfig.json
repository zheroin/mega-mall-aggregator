{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": ["src", "typings/**/*.d.ts", "**/*.props.ts"]
}
